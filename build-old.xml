        	 prefix="${jsp.dir}" />
        <zipfileset dir="include" prefix="${include.dir}" />
        <zipfileset dir="images" prefix="${image.dir}" />
        </war>
    </target>
	
	<target name="main" depends="init,clean,war"/>

